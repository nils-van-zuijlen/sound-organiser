{# src/OC/SoundOrganiserBundle/Resources/views/Default/index.html.twig #}

{% extends "XifCoreBundle::layout.html.twig" %}

{% block title %}
	Mes projets – {{ parent() }}
{% endblock %}

{% block body %}
	<article>
		<h2>Mes projets</h2>
		<div class="buttons-list">
			<a href="{{ path('xif_soundorganiser_makeprojectpage') }}">Nouveau</a>
		</div>
		<table>
			<thead>
				<tr>
					<th>Titre</th>
					<th>Description</th>
					<th>Créé le</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for project in projects %}
					<tr>
						<td>{{ project.title }}</td>
						<td>{{ project.description }}</td>
						<td>{{ project.dateCreation|date('d/m/Y') }}</td>
						<td>
							<a href="{{ path('xif_soundorganiser_edit', {'id': project.id}) }}">Éditer</a>
							<a href="{{ path('xif_soundorganiser_playpage', {'id': project.id}) }}">Lire</a>
							<a href="{{ path('xif_soundorganiser_delete', {'id': project.id}) }}" onclick="return confirm('Toute suppression est définitive.\nVoulez vous supprimer ce projet?')">Supprimer</a>
						</td>
					</tr>
				{% else %}
					<tr><td colspan="4">Vous n'avez pas encore de projets</td></tr>
				{% endfor %}
			</tbody>
		</table>
	</article>
{% endblock %}

{% block styles %}
	{{ parent() }}
{% endblock %}