{# src/OC/CoreBundle/Resources/views/Default/explore.html.twig #}

{% extends "XifCoreBundle::layout.html.twig" %}

{% block body %}
<div class="row">
	{% for project in projects %}
		<div class="col-xs-6 col-sm-4 col-md-3 col-lg-3">
			<div class="project-preview">
				<h4><a href="{{ path('xif_soundorganiser_playpage', {id: project.id, admin: admin}) }}">{{ project.title }}</a></h4>
				<p>{{ project.description }}</p>
				<p>Créé par {{ project.owner.username }} le {{ project.dateCreation|date('d/m/Y à H:i') }}</p>
			</div>
		</div>
	{% else %}
		<div class="col-xs-12"><p>Il n'y a pas encore de projets publics.</p></div>
	{% endfor %}
</div>
<div class="row">
	<div class="col-xs-12">
		{% if nbPages != 0 %}
			<ul class="pagination">
				{% for p in 1..nbPages %}
					<li {% if p == page %} class="active"{% endif %}>
						<a href="{{ path('xif_core_explorepage', {'page': p, 'admin': admin}) }}">
							{{ p }}
						</a>
					</li>
				{% endfor %}
			</ul>
		{% endif %}
	</div>
</div>
{% endblock %}
