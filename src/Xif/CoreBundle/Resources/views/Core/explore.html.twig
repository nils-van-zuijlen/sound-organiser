{# src/OC/CoreBundle/Resources/views/Default/explore.html.twig #}

{% extends "XifCoreBundle::layout.html.twig" %}

{% block body %}
<article>
	<div class="projects-preview">
		{% for project in projects %}
			<div class="project-preview">
				<h4>{{ project.title }}</h4>
				<p>{{ project.description }}</p>
				<p>Créé par {{ project.owner.username }} le {{ project.dateCreation|date('d/m/Y à H:i') }}</p>
			</div>
		{% else %}
			<p>Il n'y a pas encore de projets publics.</p>
		{% endfor %}
	</div>
	{% if nbPages != 0 %}
		<ul class="pagination">
			{# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
			{% for p in range(1, nbPages) %}
				<li {% if p == page %} class="active"{% endif %}>
					<a href="{{ path('xif_core_explorepage', {'page': p, 'admin': admin}) }}">
						{{ p }}
					</a>
				</li>
			{% endfor %}
		</ul>
	{% endif %}
</article>
{% endblock %}
